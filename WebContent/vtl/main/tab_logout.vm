<div id="tab_logout" class="popup-box" style="background:#fff;position:absolute;right:10px;left:70%;z-Index:9999">

	<div style="">
			#if ( $user.avatarImageFileName )
				<img style="width:100px;border-radius:50%" src="../download?filepath=/Users/Admin/uploads&filename=$!user.avatarImageFileName" />
			#else
				<i class="fa fa-user-circle-o" aria-hidden="true"></i> 
			#end
			$!user.firstName $!user.lastName
	</div>
	
	<div style="text-align:right">
	<a href='../logout.jsp' class="btn btn-primary">Logout</a>
	&nbsp;
	<a href="#" onclick="_jq('#tab_logout').slideUp('slow');">Close</a>
	</div>
</div>

